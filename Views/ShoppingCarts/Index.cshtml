@model IEnumerable<CafeteriaOnline.Website.Models.OrderItem>

@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MealConfiguration.Meal.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MealConfiguration.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.cart)
        {
        <tr>
            <td>
                @item.MealConfiguration.Meal.Name
            </td>
            <td>
                @item.Quantity
            </td>
            <td>
                $@item.MealConfiguration.Price
            </td>
            <td>
                <a asp-action="AddItem" asp-route-id="@item.MealConfigurationId"><i class="fa fa-plus"></i></a>|
                <a asp-action="RemoveItem" asp-route-id="@item.MealConfigurationId"><i class="fa fa-minus"></i></a>|
                <a asp-action="DeleteItem" asp-route-id="@item.MealConfigurationId">DELETE</a>
                
            </td>
        </tr>
        }
        <tr>
            <td><b>Total</b></td>
            <td></td>
            <td>
                $@ViewBag.total
            </td>
        </tr>
    </tbody>
</table>
