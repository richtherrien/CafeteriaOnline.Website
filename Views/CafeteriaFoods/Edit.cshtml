@model CafeteriaOnline.Website.Models.CafeteriaFood

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CafeteriaFood</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CafeteriaFoodId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MealType" class="control-label"></label>
                <select asp-for="MealType" class="form-control">
                    <option value="0">Appetizer</option>
                    <option value="1">Beverage</option>
                    <option value="2">Dessert</option>
                    <option value="3">Entrée</option>
                    <option value="4">Greens</option>
                    <option value="5">Pastry</option>
                </select>
                <span asp-validation-for="MealType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CafeteriaAddressId" class="control-label"></label>
                <select asp-for="CafeteriaAddressId" class="form-control" asp-items="ViewBag.CafeteriaAddressId"></select>
                <span asp-validation-for="CafeteriaAddressId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
